---
interface Props {
  locale: 'en' | 'pt-BR';
  title: string;
  description: string;
  canonical?: string;
  twitterCardType?: string;
  openGraphImage?: string;
}
---

<!doctype html>
<html lang={Astro.props['locale']}>
  <head>
    <meta charset="UTF-8" />
    <title>{Astro.props['title']}</title>
    <meta name="description" content={Astro.props['description']} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    {Astro.props['canonical'] && <meta name="canonical" content={Astro.props['canonical']} />}
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import "https://fonts.googleapis.com/css2?family=Oleo+Script:wght@400;700&family=Saira+Condensed:wght@200;400;600&display=swap";
  @import "https://fonts.googleapis.com/icon?family=Material+Icons";
  body {
    margin: 0;
    height: 100vh;
    user-select: none;
    font-family: "Saira Condensed", sans-serif;
    font-weight: 400;
    font-size: 1.4em;
  }

  body * {
    box-sizing: border-box;
    margin: 0;
  }

  h2 {
    font-size: 4rem;
    line-height: 1;
    text-align: center;
  }

  p {
    font-weight: 300;
    margin-bottom: 0.5em;
  }

  b {
    font-weight: 500;
  }

  @media screen and (max-width: 1550px) {
    h2 {
      font-size: 2em;
    }
  }

  @media screen and (max-width: 768px) {
    h2 {
      font-size: 1.75em;
    }
  }

  h3 {
    font-size: 3rem;
    line-height: 1;
    text-align: left;
  }

  @media screen and (max-width: 1550px) {
    h3 {
      font-size: 1.5em;
    }
  }

  @media screen and (max-width: 768px) {
    h3 {
      font-size: 1.25em;
    }
  }
</style>
